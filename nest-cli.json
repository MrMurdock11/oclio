{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/gateway/src",
  "defaultLibraryPrefix": "@oclio",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/gateway/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/gateway",
  "projects": {
    "gateway": {
      "type": "application",
      "root": "apps/gateway",
      "entryFile": "main",
      "sourceRoot": "apps/gateway/src",
      "compilerOptions": {
        "tsConfigPath": "apps/gateway/tsconfig.app.json"
      }
    },
    "books-management": {
      "type": "application",
      "root": "apps/books-management",
      "entryFile": "main",
      "sourceRoot": "apps/books-management/src",
      "compilerOptions": {
        "tsConfigPath": "apps/books-management/tsconfig.app.json"
      }
    },
    "user-profile": {
      "type": "application",
      "root": "apps/user-profile",
      "entryFile": "main",
      "sourceRoot": "apps/user-profile/src",
      "compilerOptions": {
        "tsConfigPath": "apps/user-profile/tsconfig.app.json"
      }
    },
    "common": {
      "type": "library",
      "root": "libs/common",
      "entryFile": "index",
      "sourceRoot": "libs/common/src",
      "compilerOptions": {
        "tsConfigPath": "libs/common/tsconfig.lib.json"
      }
    }
  }
}